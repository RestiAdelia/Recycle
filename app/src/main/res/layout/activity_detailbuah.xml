<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailbuah">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagebuah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/apple" />

        <TextView
            android:id="@+id/txtdetailbuah"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Buah"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="#2196F3"/>

        <TextView
            android:id="@+id/txtlokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lokasi : Padang"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>

        <TextView
            android:id="@+id/txtdescripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:text="@string/st_apel" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>